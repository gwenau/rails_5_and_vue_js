<p id="notice"><%= notice %></p>

<h1>Events</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Event date</th>
      <th>Event time</th>
      <th>Attending</th>
      <th>Venue</th>
      <th>Address line 1</th>
      <th>Address line 2</th>
      <th>City</th>
      <th>Postcode</th>
      <th>Phone</th>
      <th>Latitude</th>
      <th>Longitude</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @events.each do |event| %>
      <tr>
        <td><%= event.name %></td>
        <td><%= event.description %></td>
        <td><%= event.event_date %></td>
        <td><%= event.event_time %></td>
        <td><%= event.attending %></td>
        <td><%= event.venue %></td>
        <td><%= event.address_line_1 %></td>
        <td><%= event.address_line_2 %></td>
        <td><%= event.city %></td>
        <td><%= event.postcode %></td>
        <td><%= event.phone %></td>
        <td><%= event.latitude %></td>
        <td><%= event.longitude %></td>
        <td><%= link_to 'Show', event %></td>
        <td><%= link_to 'Edit', edit_event_path(event) %></td>
        <td><%= link_to 'Destroy', event, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

